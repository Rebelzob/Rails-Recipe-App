<div>
  <div class="container max-w-screen-xl p-4 mx-auto">
  <h1 class="my-10 text-2xl font-bold text-center sm:my-20 sm:text-4xl md:text-5xl sm:text-left">Welcome! <%= current_user.name %></h1>
    <ul class="grid gap-5 p-0 list-none">
    <% @recipes.each do |recipe| %>
      <li class="border recipe-item grid sm:grid-cols-[35%_1fr] p-4 py-6 items-center gap-5 rounded-xl md:transition cursor-pointer md:hover:shadow-2xl md:hover:-translate-y-1">
        <header class="flex items-center justify-between gap-5 recipe-info sm:flex-col sm:items-start sm:gap-0">
          <h2 class="text-xl font-semibold sm:text-3xl md:text-4xl">
            <a href="/recipes/<%= recipe.id %>"><%= recipe.name %></a>
          </h2>
          <button type="button" class="text-white bg-red-600 rounded-full sm:mt-3 btn btn-sm btn-error">Remove</button>
        </header>
        <p class="text-sm text-justify sm:text-left"><%= recipe.description %></p>
      </li>
    <% end %>
  </ul>

  <% if @recipes.empty? %>
    <p class="text-sm italic">There are no recipes.</p>
  <% end %>
  </div>
</div>