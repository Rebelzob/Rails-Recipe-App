<div class="w-full mx-auto md:w-2/3">
  <h1 class="text-4xl font-bold">New food</h1>

  <%= link_to "Back to foods", foods_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>

  <%= form_with url: foods_path, model: @food, method: :post do |form| %>
    <%= form.text_field :name, placeholder:"Enter food name here"%>
    <%= form.select :measurement_unit, [["grams"], ["kilos"], ["liters"], ["mililiters"]]%>
    <%= form.text_area :price, placeholder:"Enter price"%>
    <%= form.submit "Add new food"%>
  <% end %>
</div>
